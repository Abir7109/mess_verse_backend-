generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model MemberPortrait {
  memberId     String   @id
  url          String
  cloudinaryId String?
  updatedAt    DateTime @updatedAt
  createdAt    DateTime @default(now())
}

model Memory {
  id           String   @id @default(cuid())
  url          String
  cloudinaryId String?
  caption      String?
  alt          String?
  memberId     String?
  createdAt    DateTime @default(now())

  @@index([createdAt])
}
